{
  "name": "factorieth-contract",
  "version": "0.1.1",
  "description": "Smart Contract Maker",
  "license": "LGPL-3.0-or-later",
  "author": "yoonsung.eth",
  "devDependencies": {
    "@beandao/contracts": "^0.1.5",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.17.5",
    "babel-eslint": "^10.1.0",
    "buidler-ethers-v5": "^0.2.3",
    "buidler-gas-reporter": "^0.1.4",
    "chai": "^4.3.4",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eth-gas-reporter": "^0.2.22",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.3",
    "hardhat-gas-reporter": "^1.0.4",
    "http-server": "^0.12.3",
    "mocha": "^8.4.0",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-beta.15",
    "rimraf": "^3.0.2",
    "solc": "^0.8.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.10"
  },
  "files": [
    "contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "homepage": "https://github.com/Nipol/factori.eth#readme",
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nipol/factori.eth"
  },
  "scripts": {
    "build": "npx hardhat compile",
    "test": "export TS_NODE_TRANSPILE_ONLY=1 && npx hardhat test",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js --network hardhat",
    "coverage:server": "npm run coverage && http-server ./coverage -s",
    "docs": "scripts/docs.sh",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint:sol": "solhint --config .solhint.json --max-warnings 0 'contracts/**/*.sol'",
    "prettier": "prettier --config .prettierrc --write '**/*.{js,sol,ts}'",
    "vertigo": "scripts/vertigo.sh",
    "analyze": "slither ./contracts",
    "prepublish": "rimraf build contracts/build contracts/README.md artifacts cache",
    "prepare": "env COMPILE_MODE=production npm run build",
    "prepack": "scripts/prepack.sh",
    "release": "scripts/release.sh",
    "deploy:goerli": "npx hardhat run --network goerli ",
    "deploy:ropsten": "npx hardhat run --network ropsten "
  }
}
